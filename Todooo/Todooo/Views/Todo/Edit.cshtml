@model Todooo.ViewModel.TodoAddvm

<h2 class="text-primary fw-bold mb-4">Modifier le Todo</h2>

<div class="card shadow-sm p-4 mb-3">
    <form asp-action="Edit" method="post">
        <input type="hidden" name="index" value="@ViewBag.Index" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="Libele" class="form-label"></label>
            <input asp-for="Libele" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Datelimite" class="form-label"></label>
            <input asp-for="Datelimite" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Statut" class="form-label"></label>
            <div class="d-flex gap-4">
                <label><input type="radio" value="@Todooo.Enum.State.todo" asp-for="statut" /> Todo</label>
                <label><input type="radio" value="@Todooo.Enum.State.doing" asp-for="statut" /> Doing</label>
                <label><input type="radio" value="@Todooo.Enum.State.donne" asp-for="statut" /> Done</label>
            </div>
        </div>

        <button type="submit" class="btn btn-warning px-4">Modifier</button>
    </form>
</div>

<a asp-action="Index" class="btn btn-outline-primary">Retour à la liste</a>
