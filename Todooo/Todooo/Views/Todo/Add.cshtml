@model Todooo.ViewModel.TodoAddvm
@using Todooo.Enum

<h2 class="text-primary fw-bold mb-4">Ajouter un Todo</h2>

<div class="card shadow-sm p-4 mb-3">
    <form asp-action="Add" method="post">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="Libele" class="form-label"></label>
            <input asp-for="Libele" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Datelimite" class="form-label"></label>
            <input asp-for="Datelimite" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Statut" class="form-label"></label>
            <div class="d-flex gap-4">
                <label><input type="radio" value="@State.Todo" asp-for="Statut" /> Todo</label>
                <label><input type="radio" value="@State.Doing" asp-for="Statut" /> Doing</label>
                <label><input type="radio" value="@State.Done" asp-for="Statut" /> Done</label>
            </div>
        </div>

        <button type="submit" class="btn btn-success px-4">Ajouter</button>
    </form>
</div>

<a asp-action="Index" class="btn btn-outline-primary">Retour à la liste</a>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
