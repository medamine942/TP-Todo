@model List<Todoo.Models.Todo>

<h1 style="font-weight:700;color:#2d6cdf;margin-bottom:20px;">Liste des Todos</h1>

<div class="mb-3">
    <a asp-action="Add"
       style="background:#2d6cdf;color:white;padding:10px 18px;
       border-radius:8px;text-decoration:none;font-weight:600;margin-right:8px;">
        Ajouter
    </a>
</div>

<table class="table table-bordered" style="border-radius:12px;overflow:hidden;background:#f5f7ff;">
    <thead style="background:#2d6cdf;color:white;font-weight:600;">
        <tr>
            <th>Libelle</th>
            <th>Description</th>
            <th>Date limite</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Libele</td>
                <td>@todo.Description</td>
                <td>@todo.Datelimite.ToString("dd/MM/yyyy")</td>
                <td>@todo.Statut</td>
                <td>
                    <a asp-action="Edit" asp-route-index="@Model.IndexOf(todo)"
                       style="background:#ffca2c;color:black;border-radius:8px;
                           padding:6px 12px;text-decoration:none;font-weight:600;margin-right:5px;">
                        Modifier
                    </a>

                    <a asp-action="Delete" asp-route-index="@Model.IndexOf(todo)"
                       style="background:#e63946;color:white;border-radius:8px;
                           padding:6px 12px;text-decoration:none;font-weight:600;">
                        Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
